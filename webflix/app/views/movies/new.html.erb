<%= form_tag "/movies" do %>

  <div>
    <%= label_tag :title %>
    <%= text_field_tag :title, "", placeholder: 'Example: Apollo 13' %>
    <%= select_tag ... %>
    <%= check_box_tag
    <!-- <label for="title">Title:</label>
    <input size="80" name="title" id="title" placeholder="Example: Apollo 13"> -->
  </div>

  <div>
    <label for="year">Year:</label>
    <input size="4" name="year" id="year">
  </div>

  <div>
    <label for="runtime">Runtime (minutes)</label>
    <input name="runtime" id="runtime" placeholder="Example: 118">
  </div>

  <div>
    <label for="poster_url">Link to Poster:</label>
    <input size="80" name="poster_url" id="poster_url" type="url">
  </div>

  <!-- stars: integer
  runtime: integer
  plot: text
  poster_url: string
  director_id: integer
 -->
  <div>
    <label>MPAA Rated: </label>
    <select name="rated">
      <option>NOT RATED</option>
      <option>G</option>
      <option>PG</option>
      <option>PG-13</option>
      <option>R</option>
    </select>
  </div>

  <div>
    <label for="stars">Star Rating:</label>
    <input name="stars" value="5" type="number" min="1" max="10">
  </div>

  <div>
    <textarea cols="80" rows="5" placeholder="It was a dark and stormy night...." name="plot"></textarea>
  </div>

  <div>
    <label for="director_id">Directed By: </label>
    <select name="director_id">
      <% @directors.each do |director| %>
        <option value="<%= director.id %>">
          <%= director.name %>
        </option>
      <% end %>
    </select>
  </div>

  <input type="submit" name="commit" value="Add Movie">

<% end %>





