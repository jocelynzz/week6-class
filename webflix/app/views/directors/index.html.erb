<p><%= link_to "Add a New Director", "/directors/new" %></p>

<table class="table table-striped">
  <tr>
    <th>Name</th>
  </tr>
  <% @directors.each do |director| %>
    <tr>
      <td><%= link_to director.name, director_url(director.id) %></td>
      <td><%= link_to "Edit...", "/directors/#{director.id}/edit" %></td>
      <td><%= link_to "Delete", "/directors/#{director.id}", :method => 'delete' %></td>
    </tr>
  <% end %>

</table>
